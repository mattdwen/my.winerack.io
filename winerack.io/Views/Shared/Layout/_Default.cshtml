@{
    Layout = "~/Views/Shared/Layout/_Structure.cshtml";
}

@section Head {
    @RenderSection("head", required: false)
}

@Html.Partial("Layout/Partials/_Navbar")


@if (Request.IsAuthenticated) {
    <div class="main-wrapper">
        @Html.Partial("_Sidenav")

        <div class="content-wrapper">
            <div class="content-container">
                @if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMessage)) {
                    <div class="alert alert-success alert-dismissable" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        @ViewBag.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(ViewBag.DangerMessage)) {
                    <div class="alert alert-danger alert-dismissable" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        @ViewBag.DangerMessage
                    </div>
                }

                @RenderBody()

                @Html.Partial("_Footer")
            </div>
        </div>
    </div>
} else {
    if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMessage)) {
        <div class="alert alert-success alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            @ViewBag.SuccessMessage
        </div>
    }

    if (!string.IsNullOrWhiteSpace(ViewBag.DangerMessage)) {
        <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            @ViewBag.DangerMessage
        </div>
    }

    @RenderBody()
        
    @Html.Partial("_Footer")
}

@section Scripts {
    @RenderSection("scripts", required: false)
}