@using winerack.Helpers
<nav class="navbar navbar-fixed-top navbar-dark bg-primary" role="navigation">
  <div class="container">

    @if (!Request.IsAuthenticated)
    {
      <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#mainNav">
        <i class="fa fa-bars"></i>
      </button>
    }

    <a class="navbar-brand" href="/">
      <i class="wine-corkscrew"></i>
      <span>winerack</span>
    </a>

    <div class="collapse navbar-toggleable-xs" id="mainNav">
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        @if (User.IsInRole(MvcApplication.ADMINISTRATOR_GROUP))
        {
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Administrators</a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/Regions">Regions</a>
              <a class="dropdown-item" href="/Styles">Styles</a>
              <a class="dropdown-item" href="/Varietals">Varietals</a>
              <a class="dropdown-item" href="/Wines">Wines</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/Users">Users</a>
            </div>
          </li>
        }
      </ul>

      <ul class="nav navbar-nav pull-xs-right">
        @if (Request.IsAuthenticated)
        {
          <li class="dropdown">
            <a href="#" data-toggle="dropdown">
              <img class="media-object img-circle" src="@ExtensionMethods.ProfileImageUrl("sq_sm")" width="20" />
            </a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li>
                <a href="/Friends">Friends</a>
              </li>
              <li>
                <a href="/Account/Settings">Settings</a>
              </li>
              <li class="divider"></li>
              <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
              </li>
            </ul>
          </li>
          <li class="hidden-xs">
            <a href="javascript:document.getElementById('logoutForm').submit()" title="Sign out">
              <i class="fa fa-sign-out"></i>
            </a>
          </li>
        }
        else
        {
          if (false)
          {
            <li class="nav-item">
              @Html.ActionLink("Register", "Register", "Account", null, new {id = "registerLink", @class = "nav-link"})
            </li>
          }
          <li class="nav-item">
            <a href="/Account/SignIn" class="nav-link" title="Sign in">
              Sign In
            </a>
          </li>
        }
      </ul>
    </div>


  </div>


  <div class="container-fluid">

    <ul class="navbar-nav navbar-right">

      @if (Request.IsAuthenticated)
      {
        
      }
    </ul>

  </div>

</nav>

@using (Html.BeginForm("SignOut", "Account", FormMethod.Post, new { id = "logoutForm" }))
{
  @Html.AntiForgeryToken()
}