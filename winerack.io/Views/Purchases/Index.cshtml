@model IEnumerable<winerack.Models.Purchase>

@{
    ViewBag.Title = "Purchases";
}

<div class="page-header">
    <h2>Purchases</h2>
</div>

@if (Model.Count() > 0) {
    <div class="widget">
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PurchasedOn)</th>
                <th>@Html.DisplayNameFor(model => model.Bottle.Wine)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PurchasedOn)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bottle.Wine.Vineyard.Name) @Html.DisplayFor(modelItem => item.Bottle.Wine.Description)</td>
                    <td>@item.StoredBottles.Count</td>
                    <td class="text-right">
                        <a href="/Purchases/@item.ID" title="View details"><i class="fa fa-fw fa-eye"></i></a>
                        <a href="/Purchases/Edit/@item.ID" title="Edit"><i class="fa fa-fw fa-edit"></i></a>
                        <a href="/Purchases/Delete/@item.ID" title="Delete"><i class="fa fa-fw fa-remove"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
} else {
    <div class="jumbotron">
        <p>Uh-oh, no wine!</p>
        @Html.ActionLink("Add a bottle", "Create", new { controller = "Bottles" }, new { @class = "btn btn-primary btn-lg" })
    </div>
}