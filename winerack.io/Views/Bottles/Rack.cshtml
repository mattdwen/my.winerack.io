@model IEnumerable<winerack.Models.Bottle>

@if (Model.Count() > 0) {
    <div class="row winerack">
        @foreach (var bottle in Model) {
            <div class="col-sm-6 col-md-4">
                <div class="widget winerack-bottle">
                    <a href="/Bottles/Details/@bottle.ID">
                        <h3>@Html.Partial("Wines/_Description", bottle.Wine)</h3>
                        <h5>@bottle.Wine.Vineyard.Name</h5>
                    </a>
                    <div class="row">
                        <div class="col-sm-6">
                            <span class="label label-info" title="Purchased">@bottle.NumberOfBottles</span>
                            <span class="label label-danger" title="Opened">@bottle.NumberDrunk</span>
                            <span class="label label-success" title="Remaining">@bottle.NumberRemaining</span>
                        </div>
                        <div class="col-sm-6">
                            <div class="pull-right">
                                <a href="/Purchases/Create/?BottleId=@bottle.ID" title="Purchase More">
                                    <i class="fa fa-fw fa-2x fa-plus"></i>
                                </a>
                                @if (bottle.NumberRemaining > 0) {
                                    <a href="/Openings/CreateFromBottle/?BottleId=@bottle.ID" title="Open">
                                        <i class="fa-fw fa-2x wine-corkscrew"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        }
    </div>
} else {
    <div class="jumbotron">
        <p>You're out of wine!</p>
        <a href="/Bottles/Create" class="btn btn-primary"><i class="fa fa-plus"></i> Add a bottle</a>
    </div>
}