@model IEnumerable<winerack.Models.Vineyard>

@{
    ViewBag.Title = "Vineyards";
}

<div class="page-header">
    <div class="pull-right">
        <a href="/vineyards/create" class="fa fa-2x fa-plus" title="Add Vineyard"></a>
    </div>

    <h1>@ViewBag.Title</h1>
</div>

<div class="widget">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>@Html.DisplayNameFor(m => m.Region)</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a href="/vineyards/@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>@if (item.Region != null) { @item.Region.ToString() }</td>
                    <td class="text-right">
                        <a href="/vineyards/Edit/@item.ID" title="Edit"><i class="fa fa-edit"></i></a>
                        <a href="/vineyards/Delete/@item.ID" title="Delete"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>