@model IEnumerable<winerack.Models.Activity>

@if (Model.Count() < 1) {
    <div class="jumbotron">
        There is no recent activity!
    </div>
} else {
    <div class="activity-stream">
        <div class="activity-event">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">What's going on?</h3>
                </div>
                <div class="panel-body">
                    <p>
                        <a class="btn btn-primary btn-lg btn-circle" href="/Bottles/Create" title="Add a bottle"><i class="fa fa-fw fa-plus"></i></a>
                        <a class="btn btn-success btn-lg btn-circle" href="/Openings/Start" title="Open a bottle"><i class="wine-corkscrew"></i></a>
                        <a class="btn btn-danger btn-lg btn-circle" href="/Tastings/Create" title="Taste a bottle"><i class="wine-taste"></i></a>
                    </p>
                </div>
                <div class="panel-footer"></div>
            </div>
        </div>

        @foreach (var activity in Model) {
            Html.RenderAction(activity.Verb.ToString(), "Activity", new { activity = activity});
        }
    </div>
}

