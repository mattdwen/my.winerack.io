@using System.Security.Claims
@if (User.Identity.IsAuthenticated)
{
  <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav pull-right">
      <li class="nav-item">
        <div class="dropdown">
          <a href="#userMenu" data-target="userMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <img user-profile-id="@User.GetUserId()" class="profile-image img-circle" />
          </a>
          <div class="dropdown-menu dropdown-menu-right" id="userMenu">
            <a class="dropdown-item" asp-controller="Profile" asp-action="Index" title="Profile">Profile</a>
            <a class="dropdown-item" asp-controller="Manage" asp-action="Index" title="Manage">Account</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
          </div>
        </div>
      </li>
    </ul>
  </form>
}
else
{
  <ul class="nav navbar-nav pull-right">
    <li class="nav-item">
      <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" asp-controller="Account" asp-action="Signin">Sign in</a>
    </li>
  </ul>
}