@using System.Linq
@using Microsoft.AspNet.Mvc.Rendering
@model RegisterViewModel

@{
  ViewData["Title"] = "Sign up";
  var countries = Country.GetCountries().Select(x => new SelectListItem
  {
    Text = x.Name,
    Value = x.ID
  });
}

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div asp-validation-summary="ValidationSummary.All"></div>

    <div class="card card-block">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">

          <h2 class="card-title text-center">Sign up</h2>

          <form asp-controller="Account" asp-action="Register" method="post" role="form">

            <div class="form-group">
              <label asp-for="Username" class="sr-only"></label>
              <input asp-for="Username" class="form-control" placeholder="Username" />
            </div>

            <div class="form-group">
              <label asp-for="Email" class="sr-only"></label>
              <input asp-for="Email" class="form-control" placeholder="Email"/>
            </div>

            <div class="form-group">
              <label asp-for="Password" class="sr-only"></label>
              <input asp-for="Password" class="form-control" placeholder="Password"/>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label asp-for="FirstName" class="sr-only"></label>
                  <input asp-for="FirstName" class="form-control" placeholder="First"/>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label asp-for="LastName" class="sr-only"></label>
                  <input asp-for="LastName" class="form-control" placeholder="Last"/>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label asp-for="Location" class="sr-only"></label>
              <input asp-for="Location" class="form-control" placeholder="Location"/>
            </div>

            <div class="form-group">
              <label asp-for="Country" class="sr-only"></label>
              <select asp-for="Country" asp-items="@countries" class="form-control">
              </select>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Sign up</button>
            </div>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
