@model SignViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
  ViewData["Title"] = "Sign in";
  var loginProviders = SignInManager.GetExternalAuthenticationSchemes().ToList();
}

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">

      <div asp-validation-summary="ValidationSummary.All"></div>

      <div class="card card-block">
        <div class="row">
          <div class="col-md-8 col-md-offset-2 text-center">
            <h2 class="card-title">Sign in</h2>

            <fieldset class="form-group">
              <label asp-for="Username" class="sr-only"></label>
              <input asp-for="Username" class="form-control" placeholder="Username or email"/>
            </fieldset>

            <fieldset class="form-group">
              <label asp-for="Password" class="sr-only"></label>
              <input asp-for="Password" class="form-control" placeholder="password"/>
            </fieldset>

            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Sign in</button>
            </div>

            <div class="checkbox">
              <label class="c-input c-checkbox">
                <input asp-for="RememberMe" checked="checked"/>
                <span class="c-indicator"></span>
                Keep me signed in
              </label>
            </div>

            <p>
              <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>
          </div>
        </div>
      </div>

    </form>

    @{
      if (loginProviders.Count > 0)
      {
        <hr />
                <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                  <div>
                    <p>
                      @foreach (var provider in loginProviders)
                      {
                        <button type="submit" class="btn btn-default" name="provider" value="@provider.AuthenticationScheme" title="Log in using your @provider.DisplayName account">@provider.AuthenticationScheme</button>
                      }
                    </p>
                  </div>
                </form>EndContext();
      }
    }

  </div>
</div>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}