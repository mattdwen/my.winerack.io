@model IEnumerable<winerack.Models.Purchase>

@{
    ViewBag.Title = "Purchase History";
}

<h2>Purchase History</h2>

@if (Model.Count() > 0) {
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.PurchasedOn)</th>
            <th>@Html.DisplayNameFor(model => model.Bottle.Wine)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.PurchasePrice)</th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PurchasedOn)</td>
            <td>@Html.DisplayFor(modelItem => item.Bottle.Wine.Description)</td>
            <td>@item.StoredBottles.Count</td>
            <td>@Html.DisplayFor(modelItem => item.PurchasePrice)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
    }
    </table>
} else {
    <div class="jumbotron">
        <p>Uh-oh, no wine!</p>
        @Html.ActionLink("Add a bottle", "Create", new { controller = "Bottles" }, new { @class = "btn btn-primary btn-lg" })
    </div>
}