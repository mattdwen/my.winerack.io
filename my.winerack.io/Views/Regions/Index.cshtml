@model IEnumerable<winerack.Models.Region>

@{
    ViewBag.Title = "Regions";
}

<div class="page-header">
    <div class="pull-right">
        <a href="/Regions/Create" class="btn btn-primary">New Region</a>
    </div>

    <h2>Regions</h2>
</div>

<div class="widget">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Country)</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td><a href="/regions/@item.ID">@Html.DisplayFor(modelItem => item.Name)</a></td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td class="text-right">
                        <a href="/Regions/Edit/@item.ID" title="Edit"><i class="fa fa-edit"></i></a>
                        <a href="/Regions/Delete/@item.ID" title="Delete"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
