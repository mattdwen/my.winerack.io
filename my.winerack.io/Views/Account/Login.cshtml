@using winerack.Models
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" })) {
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <h1>Login</h1>
            <hr />

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "sr-only" })
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    Remember me?
                </label>
            </div>

            <input type="submit" value="Login" class="btn btn-primary btn-block" />
            <a class="btn btn-link btn-block" href="/Account/ForgotPassword">Forgotten your password?</a>
            <a class="btn btn-link btn-block" href="/Account/ForgotUsername">Forgotten your username?</a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}