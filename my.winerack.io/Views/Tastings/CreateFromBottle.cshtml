@model winerack.Models.Bottle

@{
    ViewBag.Title = "Locate a Bottle";
}

<h2>Select a bottle to drink</h2>

<table class="table">
    <thead>
        <tr>
            <th>Bottle</th>
            <th>@Html.DisplayNameFor(m => m.Purchases.FirstOrDefault().StoredBottles.FirstOrDefault().Location)</th>
            <th>Purchased</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1; }
        @foreach (var stored in Model.Purchases.SelectMany(p => p.StoredBottles).Where(s => s.Tasting == null)) {
            <tr>
                <td>#@i</td>
                <td>@Html.DisplayFor(m => stored.Location)</td>
                <td>@Html.DisplayFor(m => stored.Purchase.PurchasedOn)</td>
                <td>
                    <a class="btn btn-xs btn-success" href="/Tastings/Create?storedBottleId=@stored.ID">
                        <i class="fa fa-glass"></i> This one
                    </a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>