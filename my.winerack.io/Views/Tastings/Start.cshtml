@model IEnumerable<winerack.Models.Bottle>

@{
    ViewBag.Title = "Open a Bottle";
}

<h2>Select a wine from your collection</h2>

@if (Model.Count() > 0) {
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Wine.Vineyard)</th>
                <th>@Html.DisplayNameFor(m => m.Wine.Varietal)</th>
                <th>@Html.DisplayNameFor(m => m.Wine.Vintage)</th>
                <th>Bottles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bottle in Model) {
                <tr>
                    <td>@Html.DisplayFor(b => bottle.Wine.Vineyard.Name)</td>
                    <td>@Html.DisplayFor(b => bottle.Wine.Varietal)</td>
                    <td>@Html.DisplayFor(b => bottle.Wine.Vintage)</td>
                    <td>
                        <span class="label label-info" title="Purchased">@bottle.NumberOfBottles</span>
                        <span class="label label-danger" title="Drunk">@bottle.NumberDrunk</span>
                        <span class="label label-success" title="Remaining">@bottle.NumberRemaining</span>
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            @if (bottle.NumberRemaining > 0) {
                                <a class="btn btn-success" href="/Tastings/CreateFromBottle/?BottleId=@bottle.ID" title="Select to open now">
                                    <i class="fa fa-glass"></i>
                                    Uncork
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <div class="jumbotron">
        <p>You're out of wine!</p>
        @Html.ActionLink("Add a bottle", "Create", new { controller = "Bottles" }, new { @class = "btn btn-lg btn-primary" })
    </div>
}
