@model winerack.Models.Wine

@{
    ViewBag.Title = "Delete Wine";
}

<div class="page-header">
    <h1>Delete Wine</h1>
</div>

<div class="widget">
    <h3>Are you sure you want to delete this wine?</h3>

    <dl class="dl-horizontal">
        @if (!string.IsNullOrWhiteSpace(Model.Name)) {
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
        }
        
        <dt>@Html.DisplayNameFor(model => model.Vineyard)</dt>
        <dd>@Html.DisplayFor(model => model.Vineyard.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Varietal)</dt>
        <dd>@Html.DisplayFor(model => model.Varietal.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Vintage)</dt>
        <dd>@Html.DisplayFor(model => model.Vintage)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger">Delete Wine</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
    }
</div>
