@model IEnumerable<winerack.Models.Wine>

@{
    ViewBag.Title = "Wines";
}

<h2>Wines</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(m => m.Vineyard)</th>
        <th>@Html.DisplayNameFor(m => m.Varietal)</th>
        <th>@Html.DisplayNameFor(m => m.Vintage)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>@Html.DisplayNameFor(m => m.Region)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(i => item.Vineyard.Name)</td>
        <td>@Html.DisplayFor(i => item.Varietal.Name)</td>
        <td>@Html.DisplayFor(i => item.Vintage)</td>
        <td>@Html.DisplayFor(i => item.Name)</td>
        <td>@Html.DisplayFor(i => item.Region.Name), @Html.DisplayFor(i => item.Region.Country)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
