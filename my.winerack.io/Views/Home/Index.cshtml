@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Home Page";
}

@if (Request.IsAuthenticated) {
    <div class="row">
        <div class="col-sm-3">
            @{Html.RenderAction("MiniProfile", "Users");}
        </div>
        <div class="col-sm-9">
            @{Html.RenderAction("VisibleToUser", "Activity", new { userId = User.Identity.GetUserId() });}
        </div>
    </div>
} else { 
    <div class="jumbotron">
        <h1>winerack.io</h1>
        <p class="lead">Track your wine collection.</p>
        <p><a href="/Account/Login" class="btn btn-primary btn-lg">Get started &raquo;</a></p>
    </div>
}