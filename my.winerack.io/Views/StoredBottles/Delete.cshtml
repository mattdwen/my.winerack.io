@model winerack.Models.StoredBottle

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Bottle</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.Purchase.Bottle.Wine)</dt>
        <dd>@Model.Purchase.Bottle.Wine.Description</dd>

        <dt>Purchased</dt>
        <dd>@Html.DisplayFor(m => m.Purchase.PurchasedOn)</dd>

        <dt>@Html.DisplayNameFor(m => m.Location)</dt>
        <dd>@Html.DisplayFor(m => m.Location)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-link" href="/Bottles/Details/@Model.Purchase.BottleID#bottles">Back to list</a>
        </div>
    }
</div>
